<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:paddingVertical="6dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingStart="16dp"
    android:paddingEnd="5dp"
    android:layout_marginEnd="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:background="@drawable/custom_chat_gradient"
        android:backgroundTint="#A9BCF4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearance="@style/ChatMessageSent">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            app:alignItems="flex_end"
            android:padding="8dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_end"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_marginStart="15dp"
                android:textSize="15sp"
                android:text="Srikanth Gasikanti" />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="12:00 PM" />

            <ImageView
                android:id="@+id/tvMarkAsRead"
                android:src="@drawable/image_message_sent"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:paddingStart="5dp"
                android:scaleType="centerCrop" />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>